<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--app:cardCornerRadius="1dp"-->
        <!--android:layout_marginBottom="3dp"-->
        <!--android:layout_marginTop="3dp"-->
        <!--app:cardElevation="3dp"-->
        <!--android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_suyue"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:visibility="visible"
            android:layout_height="145dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_suyue_title"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:text="需求已发布，正在通知周围的艺人..."
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_suyue_statue"
                    android:layout_width="wrap_content"
                    android:text="匹配中"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_kehuduan_title_su"
                    android:layout_width="wrap_content"
                    android:text="aaa"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/item_kehuduan_fuwurenzheng_su"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignStart="@+id/item_kehuduan_name"
                    android:layout_below="@+id/item_kehuduan_name"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/item_kehuduan_dizhi_su"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/item_kehuduan_yuetime_su"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时长："
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/item_kehuduan_yuetime2_su"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_suyue_1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_daojishi"
                        android:layout_width="100dp"
                        android:textSize="17dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:text="11111111"
                        android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_vip_pipei"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"
                    android:text="倒计时结束后将有 VIP客服优先为您匹配"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_suyue_2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycy_suyue_heads"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_heads_more"
                    android:layout_width="30dp"
                    android:text="..."
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_siyue"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="145dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_kehuduan_title"
                    android:layout_width="wrap_content"
                    android:text="aaa"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="官方实名认证"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="11sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text=">"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_kehuduan_daijie"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="待接单"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/item_kehuduan_face"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:id="@+id/lll_birs"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignBottom="@+id/item_kehuduan_face"
                    android:layout_alignRight="@+id/item_kehuduan_face"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/item_kehuduan_imgnannv"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="7dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/item_kehuduan_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:paddingLeft="2dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_kehuduan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/item_kehuduan_face"
                    android:text="待接单"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/item_kehuduan_fuwurenzheng"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_alignStart="@+id/item_kehuduan_name"
                    android:layout_below="@+id/item_kehuduan_name"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/item_kehuduan_dizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_citys"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_alignStart="@+id/item_kehuduan_name"
                    android:layout_below="@+id/item_kehuduan_fuwurenzheng"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约时间："
                        android:textColor="@color/blue"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/item_kehuduan_yuetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_citys2"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignStart="@+id/item_kehuduan_name"
                    android:layout_below="@+id/ll_citys"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约时长："
                        android:textColor="@color/blue"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/item_kehuduan_yuetime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_kehuduan_money"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/item_kehuduan_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="9000.00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/item_kehuduan_cyj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ll_citys"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:text="诚意金：¥ 200"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="下单时间:"
                android:textSize="11sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_kehuduan_time"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:text="2019-3-7 23:34:49"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_kehuduan_button_two"
                android:layout_width="wrap_content"
                android:text=""
                android:paddingRight="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_kehuduan_button"
                android:layout_width="wrap_content"
                android:text="取消订单"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>